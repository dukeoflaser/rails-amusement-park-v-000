<h1>New user</h1>
<%= form_for @user do |f| %>
<div>
  <%= f.label :Name %><br>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :Password %><br>
  <%= f.password_field :password %>
</div>
<div>
  <%= f.label :'Height (in inches)' %><br>
  <%= f.text_field :height %><br>
</div>
<div>
  <%= f.label :'How happy are you? (1-5 scale)' %><br>
  <%= f.text_field :happiness %><br>
</div>
<div>
  <%= f.label :'How nauseous are you? (1-5 scale)' %><br>
  <%= f.text_field :nausea %><br>
</div>
<div>
  <%= f.label :'How many dollars are in your pocket?' %><br>
  <%= f.text_field :tickets %><br>
</div>
<div>
  Check box if you are a theme park owner <%= f.check_box :admin%><br>
</div>
<div>
  <%= f.submit %>
</div>
<% end %>
<%= link_to 'Back', users_path %>
